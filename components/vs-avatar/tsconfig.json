{
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules", "*.scss" ],
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/d.ts/",
    "outDir": "dist",    
    "module": "CommonJS",
    "target": "ES2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "allowUmdGlobalAccess": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [ "es5", "dom" ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "jsxFactory": "VesselComponent.h",
    "jsxFragmentFactory": "VesselComponent.f"
  }
}
